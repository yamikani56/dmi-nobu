<% include _layouts/header %>

<div class="p-10 grid grid-cols-1 h-auto sm:grid-cols-1 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3 gap-5">

    <% products.forEach(function(p){ %>

    <div class="max-w-sm rounded overflow-hidden  shadow-lg">

        <a class="pa w-full h-full" href="/products/<%= p.category %>/<%= p.slug %>">
            <img class="w-2/4 mx-auto h-40 rounded-md" src="/product_images/<%=p.id %>/<%=p.image %>" alt="">
        </a>
        <div class="px-6 py-6 pt-4 pb-2">
        <h3 class=" font-bold text-gray-600  px-4 uppercase text-lg text-center leading-normal"><%=p.title %></h3>
        <h4 class=" text-gray-600  px-4 uppercase text-sm text-center leading-normal">MK<%=parseFloat(p.price).toFixed(2) %></h4>
        </div>
         
  
        <a class="rounded bg-green-200 block mb-5 text-center text-green-400 border-3 py-2 px-2 border-green-500 mx-3" href="/products/<%= p.category %>/<%= p.slug %>">View Details</a>
    
    </div>

    <% }); %>

</div>

<% include _layouts/footer %>