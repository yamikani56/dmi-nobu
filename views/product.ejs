<%- include _layouts/header %>

<div class="w-full sm:w-1/2 md:w-1/3 flex flex-col p-3">
    <h1 class="page-header text-center py-4 text-gray-500"><%= p.title %></h1>

    <div class="h-1/4 w-1/2 mx-auto shadow-md">
        <img class="spi h-full w-full rounded-md "   src="/product_images/<%= p.id %>/<%= p.image %>" alt="">
         
    </div>

    <div class="h-30 flex flex-col mt-2 h-2/4 justify-evenly">
       
        <p class="text-gray-600  px-4 uppercase text-sm text-center leading-normal"><%= p.desc %></p>
        <p class="text-gray-500  mt-3 uppercase text-md text-center leading-normal">MK<%= parseFloat(p.price).toFixed(2) %></p>
   
   
    </div>
    
        <% if (loggedIn) { %>
   <a class="rounded bg-green-200 w-full block text-green-400 border-3 text-center mb-2 py-2 px-5 mx-auto border-green-500" href="/cart/add/<%= p.slug %>">Add to Food Basket</a> 
        <% } else {%>
        <p class="mb-7 px-2 bg-red-200 text-red-500 rounded-lg text-center border-3 border-red-500 ">You must be logged in to buy this food item.</p>
        <% } %>
     
   
</div>
<div class="w-full  mt-8 h-52">
    <ul class="gallery flex h-full w-full">
        <% galleryImages.forEach(function(image){ %>
        <% if (image != "thumbs") { %>
      <li class="h-32 w-32 mx-auto">
            <a  data-fancybox="gallery" href="/product_images/<%= p.id %>/gallery/<%= image %>">
                <img class="w-full rounded-md h-full" src="/product_images/<%= p.id %>/gallery/thumbs/<%= image %>" alt="">
            </a>
        </li>
        <% } %>
        <% }); %>
    </ul>
</div>

<%- include _layouts/footer %>